{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true
  },
  "baseUrl": ".",
  "paths": {
    "src": [
      "./src"
    ],
    "api": [
      "./src/api"
    ],
    "config": [
      "./src/config"
    ],
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": ["node_modules", "dist"],
}
